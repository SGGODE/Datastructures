#include <iostream>

using namespace std;
void print(int n,int sum){
    //parameterized
    if(n<1){
     cout<<sum<<endl;
     return;
    }
    print(--n,sum+n);
    //sum+=n;
}
int main()
{
    int n;
    cin>>n;
    print(n,0);

    return 0;
}
